{
  "name": "fastify-user-auth",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/fastify-user-auth/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/fastify-user-auth",
        "tsConfig": "packages/fastify-user-auth/tsconfig.lib.json",
        "packageJson": "packages/fastify-user-auth/package.json",
        "main": "packages/fastify-user-auth/src/index.ts",
        "assets": ["packages/fastify-user-auth/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs fastify-user-auth {args.ver} {args.tag} {args.otp}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/fastify-user-auth/jest.config.ts"
      }
    }
  },
  "tags": []
}
